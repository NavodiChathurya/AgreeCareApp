<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <!-- Scrollable Content Area -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottomNavBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#011002"
                android:paddingTop="8dp"
                android:paddingBottom="16dp" />

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile_bg"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/profile_circle_bg" />

            <!-- User Name -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jone Wicks"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#011002"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Settings Buttons -->
            <Button
                android:id="@+id/btnManageSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manage_app_settings"
                android:background="@drawable/ripple_rounded_button"
                android:textColor="#FAF6F6"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_user_details"
                android:background="@drawable/ripple_rounded_button"
                android:textColor="#FAF6F6"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnChangeThemeLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_theme_language"
                android:background="@drawable/ripple_rounded_button"
                android:textColor="#FAF6F6"
                android:layout_marginBottom="16dp"
                android:contentDescription="Navigate to Change Theme or Language page" />

            <Button
                android:id="@+id/btnSetReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_notification_reminder"
                android:background="@drawable/ripple_rounded_button"
                android:textColor="#FAF6F6"
                android:layout_marginBottom="16dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:background="@drawable/ripple_rounded_button"
                android:textColor="#FAF6F6"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#124904">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navTasks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tasks"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="#C9DB1C"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>