<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#011802">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textCropName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/textCropStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textCropDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-08-05"
            android:textSize="14sp"
            android:textColor="@color/text_hint"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textCropMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="14sp"
            android:textColor="@color/text_hint"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditCrop"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:background="@drawable/button_ripple"
                android:backgroundTint="@color/secondaryColor"
                android:textColor="@color/background_light"
                android:textSize="14sp"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDeleteCrop"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:drawableStart="@drawable/ic_delete"
                android:drawablePadding="8dp"
                android:background="@drawable/button_ripple"
                android:backgroundTint="#D32F2F"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingHorizontal="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>