<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_main">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <EditText
        android:id="@+id/editCropName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Crop Name"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/editCropStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Crop Status"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/editCropDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:textColorHint="#000000"
        android:focusable="false" />

    <EditText
        android:id="@+id/editCropMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Message"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:textColorHint="#000000"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <Button
        android:id="@+id/btnSaveCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Crop"
        android:background="@drawable/btn_green_ripple"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />
</LinearLayout>