<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reminderRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:padding="24dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:titleTextColor="#FFFFFF" />

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/back_arrow"
        android:contentDescription="Back"
        android:clickable="true"
        android:focusable="true" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottomNavBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminders"
                android:textSize="38sp"
                android:textStyle="bold"
                android:textColor="#011B18"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="90dp" />

            <!-- Input field for new reminder -->
            <EditText
                android:id="@+id/etNewReminder"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter new reminder"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/ripple_rounded_button"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="15dp" />

            <!-- Pick date & time button -->
            <Button
                android:id="@+id/btnPickDateTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Pick Date and Time"
                android:textColor="#FFFFFF"
                android:background="@drawable/ripple_rounded_button"
                android:layout_marginBottom="15dp" />

            <!-- Add reminder button -->
            <Button
                android:id="@+id/btnAddReminder"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Add Reminder"
                android:textColor="#FFFFFF"
                android:background="@drawable/ripple_rounded_button"
                android:layout_marginBottom="16dp" />

            <!-- Daily weather toggle -->
            <CheckBox
                android:id="@+id/chkDailyWeatherNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Daily Weather Notification"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView for reminders -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReminders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:scrollbars="vertical"
                android:contentDescription="List of reminders" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#124904"
        android:weightSum="4"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navTasks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasks"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textColor="#C9DB1C"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>