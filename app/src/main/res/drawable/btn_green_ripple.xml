<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF"> <!-- Ripple color: soft white (20% opacity) -->

    <!-- Button background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#388E3C" /> <!-- Main button color (green) -->
            <stroke
                android:width="1dp"
                android:color="#66BB6A" /> <!-- Subtle green border -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Ripple effect mask -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#99FFFFFF" /> <!-- Ripple mask (60% white) -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</ripple>
