<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF"> <!-- Softer ripple: 20% white -->

    <!-- Background content of the button -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#388E3C" /> <!-- Primary green -->
            <stroke
                android:width="1dp"
                android:color="#66BB6A" /> <!-- Accent border -->
            <corners android:radius="20dp" /> <!-- Smooth rounded edges -->
        </shape>
    </item>

    <!-- Ripple mask (defines the area affected by ripple) -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#99FFFFFF" /> <!-- Light ripple mask (60% white) -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</ripple>
