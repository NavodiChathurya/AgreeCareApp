<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF"> <!-- Softer ripple color for a clean effect -->

    <!-- Base background of the button -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#388E3C" /> <!-- Stronger green for visibility -->
            <corners android:radius="24dp" /> <!-- More modern curvature -->
            <stroke
                android:width="1dp"
                android:color="#66BB6A" /> <!-- Subtle stroke to define boundary -->
        </shape>
    </item>

    <!-- Ripple mask -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#66BB6A" /> <!-- Ripple fill, slightly transparent -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</ripple>
